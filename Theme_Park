print('Welcome to the theme park!\n')
print('You have to be at least 47 inches to enter.\n')
height = int(input('What is your height in inches? '))
bill = 0
# height in inches
if height >= 47:
  print('\nYou are tall enough to enter\n')
  age = int(input('What is your age? '))
  if age < 12:
    # bill = $5 if under age 12
    bill = 5
    print('\nChild tickets are $5.\n')
  if age >= 12 and age <= 18:
    # bill = $7 if age 12-17
    bill = 7
    print('\nYouth tickets are $7.\n')
  if age > 18:
    # bill = $12 if over age 18
    bill = 12
    print('\nAdult tickets are $12.\n')
  
  # Asking if the person wants a photo taken
  wants_photo = input('Would you like a photo taken for $3? Y or N ').upper()
  if wants_photo == 'Y':
    # Add $3 to bill
    bill += 3
    print(f'\nYour total is ${bill}')
  else:
    print(f'\nYour total is ${bill}')
else:
  print('\nYou may not enter')
